{
  "name": "zig",
  "displayName": "Zig-Fork",
  "description": "Language support for the Zig programming language",
  "version": "0.2.9",
  "publisher": "ikrima",
  "private": true,
  "icon": "images/zig-icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ikrima/vscode-zig"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:zig"
  ],
  "main": "./out/extension",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "zig",
        "required": [
          "isDebugTask",
          "srcFilePath"
        ],
        "properties": {
          "isDebugTask": {
            "type": "boolean",
            "description": "Run in debug mode"
          },
          "srcFilePath": {
            "type": "string",
            "description": "The file path to the zig source code to filter the test. Can be omitted."
          },
          "testArgs": {
            "type": "array",
            "description": "Additional args to pass \"zig test\""
          },
          "testFilter": {
            "type": "string",
            "description": "Test name to filter against"
          },
          "mainPkgPath": {
            "type": "string",
            "description": "The file path to output the test to. Can be omitted."
          },
          "emitBinPath": {
            "type": "string",
            "description": "The file path to output the test to. Can be omitted."
          },
          "options": {
            "type": "object",
            "description": "Additional command options",
            "properties": {
              "cwd": {
                "type": "string",
                "description": "The current working directory of the executed program or script. If omitted Code's current workspace root is used."
              }
            }
          }
        }
      }
    ],
    "languages": [
      {
        "id": "zig",
        "extensions": [
          ".zig"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zig",
        "scopeName": "source.zig",
        "path": "./syntaxes/zig.tmLanguage.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "zig",
        "owner": "zig",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "([^\\s]*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(note|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "zig",
      "properties": {
        "zig.binPath": {
          "type": "string",
          "scope": "window",
          "default": "zig.exe",
          "description": "Set a custom path to the Zig binary. Defaults to 'zig' in your PATH."
        },
        "zig.zls.binPath": {
          "type": "string",
          "scope": "window",
          "default": "zls.exe",
          "description": "Path to `zls` executable. Example: `C:/zls/zig-out/bin/zls.exe`."
        },
        "zig.zls.debugBinPath": {
          "type": "string",
          "scope": "window",
          "description": "Path to `zls` debug executable. Example: `C:/zls/zig-out-dbg/bin/zls.exe`."
        },
        "zig.zls.enableDebugMode": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Enable debug logging in release builds of zls."
        },
        "zlsClient.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "zig.build.rootDir": {
          "type": "string",
          "scope": "resource",
          "default": "${workspaceFolder}",
          "description": "The zig build root directory."
        },
        "zig.build.buildFile": {
          "type": "string",
          "scope": "resource",
          "default": "${workspaceFolder}/build.zig",
          "description": "The path to build.zig. This is only required if zig.buildOptions = build."
        },
        "zig.build.buildStep": {
          "type": "string",
          "scope": "resource",
          "enum": [
            "buildFile",
            "buildExe",
            "buildLib",
            "buildObk"
          ],
          "default": "buildFile",
          "description": "Which build command Zig should use to build the code."
        },
        "zig.build.extraArgs": {
          "type": "array",
          "scope": "resource",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra arguments to passed to Zig."
        },
        "zig.task.binDir": {
          "type": "string",
          "scope": "resource",
          "default": null,
          "description": "Test bin output path."
        },
        "zig.task.testArgs": {
          "type": "array",
          "scope": "resource",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Workspace Default additional flags to pass \"zig test\""
        },
        "zig.task.debugArgs": {
          "type": "array",
          "scope": "resource",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Additional flags to to pass \"zig test\" in debug mode"
        },
        "zig.task.enableProblemMatcher": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Highlight lines where tests failed"
        },
        "zig.misc.buildOnSave": {
          "type": "boolean",
          "scope": "resource",
          "default": false,
          "description": "Compiles code on file save using the settings specified in 'Build Option'."
        },
        "zig.misc.revealOnFormatError": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "description": "Should output channel be raised on formatting error."
        }
      }
    },
    "configurationDefaults": {
      "[zig]": {
        "editor.defaultFormatter": "ikrima.zig",
        "editor.tabSize": 4,
        "editor.autoIndent": "full",
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "files.eol": "\n"
      }
    },
    "commands": [
      {
        "command": "zig.zls.start",
        "title": "Start Zig Language Server",
        "category": "Zls"
      },
      {
        "command": "zig.zls.stop",
        "title": "Stop Zig Language Server",
        "category": "Zls"
      },
      {
        "command": "zig.zls.restart",
        "title": "Restart Zig Language Server",
        "category": "Zls"
      },
      {
        "command": "zig.test.rerun",
        "title": "Re-run last zig test",
        "description": "Re-run the last test",
        "enablement": "zig.hasLastRanTask",
        "category": "Zig"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=out/extension.js",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "test": "npm run compile && npm run lint && node ./node_modules/vscode/bin/test",
    "vscode:prepublish": "rimraf out && npm run -S esbuild-base -- --minify",
    "package": "vsce package -o out/%npm_package_name%-%npm_package_version%.vsix",
    "deploy": "npm run package && code --uninstall-extension ikrima.%npm_package_name% && code --install-extension out/%npm_package_name%-%npm_package_version%.vsix"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.6",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.18.12",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vscode/test-electron": "^2.1.3",
    "esbuild": "^0.14.25",
    "eslint": "^8.9.0",
    "mocha": "^9.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vsce": "^2.6.7"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "vscode-languageclient": "^7.0.0"
  }
}
