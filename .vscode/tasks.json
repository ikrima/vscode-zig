// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label":          "npm: watch",
      "type":           "npm",
      "script":         "watch",
      "group":          "build",
      "isBackground":   true,
      "problemMatcher": "$esbuild-watch",
    },
    {
      "label":          "npm: build",
      "type":           "npm",
      "script":         "build",
      "group":          { "kind": "build", "isDefault": true },
      "problemMatcher": "$esbuild",
    },
    {
      "label":          "npm: compile",
      "type":           "npm",
      "script":         "compile",
      "group":          "build",
      "problemMatcher": "$tsc",
      "presentation":   {
        "echo":   true,
        "reveal": "always",
        "focus":  false,
        "panel":  "shared",
        "clear":  true,
      },
    }
  ]
}