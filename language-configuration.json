{
  "url": "vscode://schemas/language-configuration",
  "comments": {
    "lineComment": "//",
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
  ],
  "autoClosingPairs": [
    { "open": "{" , "close": "}"                                  },
    { "open": "[" , "close": "]"                                  },
    { "open": "(" , "close": ")"                                  },
    { "open": "'" , "close": "'" , "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"]            },
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "surroundingPairs": [
    ["{" , "}" ],
    ["[" , "]" ],
    ["(" , ")" ],
    ["\"", "\""],
    ["'" , "'" ],
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*@region\\b"   ,
      "end"  : "^\\s*//\\s*@endregion\\b",
    }
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:def|for|while|if|else|switch).*?:\\s*$",
      "action":     { "indent": "indent" },
    },
    // Single comment e.g. //
    {
        // "beforeText": "^\\s*//[^/].*$",
        "beforeText": "^\\s*//(?! zig fmt: on|/).*$",
        "action": { "indent": "none", "appendText": "// " },
    },
    // Doc comment e.g. ///
    {
      "beforeText": "^\\s*///.*$",
      "action": { "indent": "none", "appendText": "/// " },
    },
  ],
}
